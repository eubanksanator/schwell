<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-md-6">
        <%= form_tag import_contacts_path, class: "form-group", multipart: true do %>
        <%= file_field_tag :file, class: "form-control" %>
        <%= submit_tag "Import", class: "form-control btn-primary" %>
        <% end %>
    </div>
    <div class="col-md-6">
        <%= link_to 'New Contact', new_contact_path %>
    </div>
</div>


<div class="col-md-12">
    <div class="col-md-6">
        <h3>Name</h3>
    </div>
    <div class="col-md-6">
        <h3>Number</h3>
    </div>
</div>

<div class="col-md-12">
    <% @contacts.each do |contact| %>
    <div class="col-md-6">
        <p><%= contact.name %></p>
    </div>
    <div class="col-md-6">
        <p><%= contact.phone_num %></p>
    </div>
    <% end %>
</div>
